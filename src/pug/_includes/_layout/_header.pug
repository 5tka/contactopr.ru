        .container
            a.logo(href='#')
                img.logo-img(src='img/logo.png')

            .landing-menu
                - var menu_items = ["НОВОСТИ","УСЛУГИ","О НАС","КЛИЕНТЫ","ПРОЕКТЫ","КОНТАКТЫ","ВАКАНСИИ","ОТПРАВИТЬ БРИФ"];
